<Window x:Class="EasyToDo.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyToDo.Views"
        mc:Ignorable="d"
        Title="EasyToDo" Height="400" Width="250">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="EasyToDo" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Grid.Row="0"/>
        <ListBox x:Name="NotesListBox" Grid.Row="1" DisplayMemberPath="Title" SelectionMode="Single"/>
        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Left" Margin="0,10,0,0">
            <Button x:Name="CreateNoteButton" Content="Create New Note" Width="120" Margin="2"/>
            <Button x:Name="DeleteNoteButton" Content="Delete Note" Width="120" Margin="2"/>
            <Button x:Name="DuplicateNoteButton" Content="Duplicate Note" Width="120" Margin="2"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Vertical" HorizontalAlignment="Left" Margin="0,5,0,0">
            <Button x:Name="StorageMenuButton" 
                    Width="120" 
                    Margin="2"
                    ToolTip="Storage and backup options"
                    Click="StorageMenuButton_Click">
                <Button.Content>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="StorageMenuIcon" Text="💾" Margin="0,0,3,0"/>
                        <TextBlock Text="Storage Menu"/>
                        <TextBlock Text=" ▼" Margin="3,0,0,0" FontSize="8"/>
                    </StackPanel>
                </Button.Content>
                <Button.ContextMenu>
                    <ContextMenu x:Name="StorageContextMenu">
                        <MenuItem Header="ℹ️ Storage Details" Click="StorageDetails_Click"/>
                        <MenuItem Header="💾 Create Backup Now" Click="CreateBackupNow_Click"/>
                        <Separator/>
                        <MenuItem Header="🔄 Check for Sync Updates" Click="CheckForSync_Click"/>
                        <MenuItem Header="📁 Open Storage Folder" Click="OpenStorageFolder_Click"/>
                        <Separator/>
                        <MenuItem Header="🔧 Change Storage Location" Click="ChangeStorageLocation_Click"/>
                        <MenuItem Header="🔄 Reset to Auto Storage" Click="ResetToAutoStorage_Click"/>
                        <Separator/>
                        <MenuItem Header="📋 Manage Backups" Click="ManageBackups_Click"/>
                        <MenuItem Header="🔄 Restore from Backup" Click="RestoreFromBackup_Click"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
        </StackPanel>
        <TextBlock x:Name="StatusMessage" 
                   Grid.Row="4" 
                   Text=""
                   FontSize="11" 
                   FontWeight="Bold"
                   Foreground="Green"
                   Margin="0,5,0,0"
                   HorizontalAlignment="Center"
                   Visibility="Collapsed"/>
        <TextBlock x:Name="StorageStatusLabel" 
                   Grid.Row="5" 
                   Text="Storage: Local"
                   FontSize="10" 
                   Foreground="Gray" 
                   Margin="0,10,0,0"
                   HorizontalAlignment="Center"
                   ToolTip="Current storage location">
        </TextBlock>
    </Grid>
</Window>
