<Window x:Class="to_do_list.NoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Note" Height="400" Width="300"
        WindowStyle="ToolWindow"
        ResizeMode="CanResizeWithGrip">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="TitleTextBox" 
                 Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                 FontSize="16" 
                 FontWeight="Bold"
                 Background="Transparent"
                 BorderThickness="0"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Color: " VerticalAlignment="Center"/>
            <ComboBox x:Name="ColorPicker" Width="100" SelectionChanged="ColorPicker_SelectionChanged">
                <ComboBoxItem Content="Yellow" Tag="#FFFFE0"/>
                <ComboBoxItem Content="Pink" Tag="#FFE4E1"/>
                <ComboBoxItem Content="Blue" Tag="#E0FFFF"/>
                <ComboBoxItem Content="Green" Tag="#E0FFE0"/>
                <ComboBoxItem Content="Orange" Tag="#FFE4C4"/>
            </ComboBox>
        </StackPanel>

        <ItemsControl x:Name="ItemsListBox" 
                     Grid.Row="2"
                     Background="Transparent"
                     BorderThickness="0"
                     ItemsSource="{Binding Items}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <DockPanel Margin="0,2">
                        <CheckBox IsChecked="{Binding IsChecked}" 
                                 Margin="0,0,5,0"
                                 Click="CheckBox_Click"/>
                        <TextBlock Text="{Binding Text}">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsChecked}" Value="True">
                                            <Setter Property="TextDecorations" Value="Strikethrough"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </DockPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
        
        <TextBox x:Name="NewItemTextBox" 
                 Grid.Row="2" 
                 VerticalAlignment="Bottom"
                 Margin="25,5,0,0"
                 Background="Transparent"
                 BorderThickness="0"
                 KeyDown="NewItemTextBox_KeyDown"
                 GotFocus="NewItemTextBox_GotFocus"
                 LostFocus="NewItemTextBox_LostFocus"
                 Text="Type here to add a new item..."/>
    </Grid>
</Window>