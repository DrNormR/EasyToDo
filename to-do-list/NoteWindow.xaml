<Window x:Class="to_do_list.NoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Note" Height="400" Width="300"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResizeWithGrip">
    <Window.Resources>
        <Style x:Key="CircleCheckBox" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Ellipse x:Name="Circle" Width="16" Height="16" Stroke="Gray" StrokeThickness="2" Fill="White"/>
                            <Ellipse x:Name="CheckMark" Width="10" Height="10" Fill="Gray" Visibility="Collapsed"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="CheckMark" Property="Fill" Value="#FF0078D7"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Circle" Property="Stroke" Value="#FFBFBFBF"/>
                                <Setter TargetName="Circle" Property="Fill" Value="#FFF0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0" Name="TitleBar" LastChildFill="True">
            <Button x:Name="PinButton"
                    Content="📌"
                    Width="20"
                    Height="20"
                    Margin="0,0,5,0"
                    ToolTip="Pin window on top"
                    Click="PinButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    FontSize="16"
                    FontWeight="Bold"
                    FontFamily="Segoe UI Emoji"/>
            <TextBox x:Name="TitleTextBox" 
                     Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                     FontSize="16" 
                     FontWeight="Bold"
                     Background="Transparent"
                     BorderThickness="0"/>
        </DockPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
            <TextBlock Text="Color: " VerticalAlignment="Center"/>
            <ComboBox x:Name="ColorPicker" Width="100" SelectionChanged="ColorPicker_SelectionChanged">
                <ComboBoxItem Content="Yellow" Tag="#FFFFE0"/>
                <ComboBoxItem Content="Pink" Tag="#FFE4E1"/>
                <ComboBoxItem Content="Blue" Tag="#E0FFFF"/>
                <ComboBoxItem Content="Green" Tag="#E0FFE0"/>
                <ComboBoxItem Content="Orange" Tag="#FFE4C4"/>
            </ComboBox>
        </StackPanel>

        <ItemsControl x:Name="ItemsListBox" 
                     Grid.Row="2"
                     Background="Transparent"
                     BorderThickness="0"
                     ItemsSource="{Binding Items}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border x:Name="ItemBorder" Background="Transparent" Padding="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <CheckBox Grid.Column="0" 
                                     IsChecked="{Binding IsChecked}" 
                                     Margin="0,0,5,0" 
                                     Click="CheckBox_Click"
                                     VerticalAlignment="Center"
                                     Style="{StaticResource CircleCheckBox}"/>

                            <Grid Grid.Column="1">
                                <TextBlock Text="{Binding Text}" 
                                         VerticalAlignment="Center"
                                         MouseDown="TextBlock_MouseDown"
                                         Cursor="IBeam">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsChecked}" Value="True">
                                                    <Setter Property="TextDecorations" Value="Strikethrough"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
                                         Visibility="Collapsed"
                                         Name="EditTextBox"
                                         LostFocus="EditTextBox_LostFocus"
                                         KeyDown="EditTextBox_KeyDown"
                                         Background="Transparent"
                                         BorderThickness="0"/>
                            </Grid>
                            
                            <Button Grid.Column="2" 
                                   Content="X"
                                   Width="20"
                                   Height="20"
                                   Margin="5,0,0,0"
                                   Click="DeleteItem_Click"
                                   Background="Transparent"
                                   BorderThickness="0"
                                   Foreground="Red"
                                   FontWeight="Bold"
                                   FontSize="14"
                                   VerticalAlignment="Center">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsMouseOver, ElementName=ItemBorder}" Value="False">
                                                <Setter Property="Visibility" Value="Hidden"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <Separator Grid.Row="3" Margin="0,5" Opacity="0.5"/>
        
        <TextBox x:Name="NewItemTextBox" 
                 Grid.Row="4"
                 Margin="25,5,0,0"
                 Background="Transparent"
                 BorderThickness="0"
                 KeyDown="NewItemTextBox_KeyDown"
                 GotFocus="NewItemTextBox_GotFocus"
                 LostFocus="NewItemTextBox_LostFocus"
                 Text="Type here to add a new item..."/>
    </Grid>
</Window>